<Window x:Class="EISKinectApp.View.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameView" Height="600" Width="800"
        Background="Black">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="Black">
            <Line x:Name="CheckLine"
                  Stroke="White"
                  StrokeThickness="2"
                  StrokeDashArray="4,4"/>
        </Canvas>

        <!-- Tekst overlay -->
        <TextBlock x:Name="StatusText"
                   Foreground="White"
                   FontSize="16"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Game started..."/>
    </Grid>
</Window>