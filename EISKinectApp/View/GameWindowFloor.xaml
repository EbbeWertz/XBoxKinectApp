<Window x:Class="EISKinectApp.view.GameWindowFloor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EISKinectApp.view"
        mc:Ignorable="d"
        Title="GameWindowFloor"
        WindowState="Maximized"
        Background="Black"
        ResizeMode="CanResize"
        WindowStartupLocation="Manual">
    <Grid>
        <Viewbox x:Name="ProjectionBox" Stretch="Uniform">
            <Canvas x:Name="ProjectionCanvas" Width="640" Height="480" Background="Transparent">
                <Ellipse x:Name="CircleRed"
                         Width="200" Height="200"
                         StrokeThickness="6"
                         Stroke="Gray"
                         Fill="#800000"
                />

                <!-- Bottom-left (Blue) circle -->
                <Ellipse x:Name="CircleBlue"
                         Width="200" Height="200"
                         StrokeThickness="6"
                         Stroke="Gray"
                         Fill="#000080"
                />

                <!-- Bottom-right (Yellow) circle -->
                <Ellipse x:Name="CircleYellow"
                         Width="200" Height="200"
                         StrokeThickness="6"
                         Stroke="Gray"
                         Fill="#808000"
                />
                <!-- Left foot indicator -->
                <Ellipse x:Name="FootLeft"
                         Width="50" Height="80"
                         Stroke="White"
                         StrokeThickness="3"
                         Fill="#40FFFFFF"
                         Visibility="Hidden"/>

                <!-- Right foot indicator -->
                <Ellipse x:Name="FootRight"
                         Width="50" Height="80"
                         Stroke="White"
                         StrokeThickness="3"
                         Fill="#40FFFFFF"
                         Visibility="Hidden"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>