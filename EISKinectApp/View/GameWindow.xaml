<Window x:Class="EISKinectApp.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:EISKinectApp.View"
        Title="GameView" Height="600" Width="800"
        Background="Black">
    <Grid Background="Black">
        <Viewbox Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas x:Name="GameCanvas" Width="640" Height="480" Background="Black">
                <view:SkeletonView x:Name="SkeletonOverlay" Thick="true" Color="LimeGreen"/>
                <Line x:Name="CheckLine"
                      Stroke="White"
                      StrokeThickness="2"
                      StrokeDashArray="4,4"/>
            </Canvas>
        </Viewbox>

        <!-- Text overlay -->
        <TextBlock x:Name="StatusText"
                   Foreground="White"
                   FontSize="16"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Game started..."/>
    </Grid>
</Window>