<Window x:Class="EISKinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Calibration" Height="400" Width="600">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="StatusText" Text="Stand in corner 1 and press Capture" 
                       FontSize="18" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button x:Name="CaptureButton" Content="Capture Point" Width="150" Height="40"
                    Click="CaptureButton_Click"/>
            <Button x:Name="CalibrateButton" Content="Calibrate" Width="150" Height="40"
                    Click="CalibrateButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>